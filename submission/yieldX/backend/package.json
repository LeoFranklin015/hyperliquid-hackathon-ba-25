{
  "name": "yieldX-backend",
  "version": "1.0.0",
  "description": "DCA Keeper Backend Service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=4096 dist/index.js",
    "dev": "node --max-old-space-size=4096 ./node_modules/.bin/ts-node src/index.ts",
    "watch": "node --max-old-space-size=4096 ./node_modules/.bin/ts-node --watch src/index.ts"
  },
  "keywords": [
    "dca",
    "keeper",
    "blockchain",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "mongoose": "^8.17.2",
    "node-cron": "^3.0.3",
    "viem": "^1.19.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
